<body>
    <!-- Nav bar -->
    <%-include("./partials/nav-after-login.ejs")%>
        <h2 style="text-align: center; font-weight:800 ; margin-top: 20px;">Checkout</h2>
        <div class="container-fluid cart-container">
            <div class="cart-products-container">
                <div class="cart-products-listing" style=" padding-top: 13px;">
                    <h4 style=" margin-left: 20px;  font-weight:600;">Add Address</h4>
                    <form action="/" method="POST" style=" margin-top: 25px;" id="form">
                        <div class="form-group  mb-4">
                            <input id="shippingName" type="text" class="form-control entry shadow-none" placeholder="Shipping name"
                                name="shippingName">
                            <div class="text-danger " style="font-size: small; margin-left: 20px;" id="shippingNameError"></div>

                            <small class="form-text text-muted "></small>
                        </div>
                        <div class="form-group  mb-4">
                            
                            <input id="phone" type="number" class="form-control entry shadow-none"
                                placeholder="Phone Number" name="phone">
                            <div class="text-danger " style="font-size: small; margin-left: 20px;" id="phoneError">
                            </div>
                          
                    
                        </div>
                        <div class="form-group mt-4">
                            <input id="city" type="text" class="form-control entry shadow-none"
                                name="city" placeholder="City">
                            <div class="text-danger " style="font-size: small; margin-left: 20px;"
                                id="cityError"></div>
                        </div>
                        <div class="form-group mt-4">
                            <input id="state" type="password" class="form-control entry shadow-none"
                                name="state" placeholder="State">
                            <div class="text-danger " style="font-size: small; margin-left: 20px;"
                                id="stateError"></div>
                        </div>
                        <div class="form-group mt-4">
                            <input id="country" type="password" class="form-control entry shadow-none"
                                name="country" placeholder="Country">
                            <div class="text-danger " style="font-size: small; margin-left: 20px;"
                                id="countryError"></div>
                        </div>
                        <div class="form-group mt-4">
                            <input id="pincode" type="password" class="form-control entry shadow-none"
                                name="pincode" placeholder="Pincode">
                            <div class="text-danger " style="font-size: small; margin-left: 20px;"
                                id="pincodeError"></div>
                        </div>
                        
                        

                        <button type="submit " class="btn" value="submit" style="margin-top: 48px;" id="signup-btn">Add Address</button>
                    </form>

                </div>

            </div>

            <div class="cart-total-container">
                <h4 style=" margin-left: 10px;  font-weight:600;margin-top: 10px;">Order Summary</h4>
                <div class="total-values-container">
                    <div class="preview-products" style="overflow:scroll;">
                        <%cartData.Items.forEach((value)=>{%>
                            <div class="display_product" style="display: flex; justify-content: space-between; align-items: center;">
                                <img style="width: 60px;" src="<%=value.Products.Image[0]%>" alt="">
                                <p style="overflow: hidden;" ><%=value.Products.Name%></p>
                                <p style="margin-right: 10px;"><%=value.Products.Price%>/-</p>
                            </div>
                            <%})%>
                    </div>
                    <div class="total-values">
                        <p class="total-texts">Subtotal :</p>
                        <p class="cart-prices" id="cartTotal-Subtotal"><%-cartData.TotalAmount%><span>/-</span></p>
                    </div>
                    <div class="total-values">
                        <p class="total-texts">Discount Price :</p>
                        <p class="cart-prices">-0/-</p>
                    </div>
                    <div class="total-values">
                        <p class="total-texts" style="font-size: x-large; color: black ;">Total :</p>
                        <p style="font-size: x-large; font-weight: 600; " class="cart-prices"><span
                                id="total"><%=cartData.TotalAmount%></span>/-</p>
                    </div>
                </div>
                <a href="/cheakout" style="text-decoration: none;"> <button type="submit " value="submit"
                        class="btn">Place Order</button></a>
            </div>
            <!-- cheakbox -->
             <div class="selectPayment ">
                <h4 style=" margin-left: 10px; font-size: medium;  font-weight:600;margin-top: 10px;">Select Payment</h4>
                 <div class="form-check">
                     <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" >
                     <label class="form-check-label" for="exampleRadios1">
                       Cash on Delivery
                     </label>
                   </div>
                   <div class="form-check">
                     <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2" disabled  >
                     <label class="form-check-label" for="exampleRadios2">
                       UPI Payment
                     </label>
                   </div>
                   <div class="form-check">
                     <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3" disabled>
                     <label class="form-check-label" for="exampleRadios3">
                       Wallet
                     </label>
                   </div>
             </div>             
        </div>


