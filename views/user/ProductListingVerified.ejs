                                <a href="" onclick="addtowishlist('<%=data._id%>')" ><i  class="far fa-heart heart-empty"></i></a>
                            </label>
                        </div>
                        <div class="gow-img-div img-div">
                            <img style="width: 195px;" src="<%= data.Image[0] %>" alt="god-of-war-figurine">

                        </div>

                        <div class="text-container">


                            <h2 class="item-name">
                                <%=data.Name%>
